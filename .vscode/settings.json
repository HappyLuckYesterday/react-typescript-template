  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.suggestSelection": "recentlyUsed",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "cSpell.words": [
    "Formik",
    "clsx",
    "pcode",
    "persistor",
    "reduxjs"
  ]
}