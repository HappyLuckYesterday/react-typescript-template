{
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.suggestSelection": "recentlyUsed",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "cSpell.words": [
    "clsx",
    "Formik",
    "pcode",
    "persistor",
    "reduxjs",
    "stylelint",
    "testid"
  ],
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss"
  ]
}